{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es2018",
        "jsx": "react",
        "allowJs": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "dom",
            "dom.iterable"
        ]
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
