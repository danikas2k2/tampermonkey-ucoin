{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rulesDirectory": [],
    "rules": {
        "arrow-parens": [true, "ban-single-arg-parens"],
        "arrow-return-shorthand": [true, "multiline"],
        "eofline": true,
        "interface-name": [true, "never-prefix"],
        "max-classes-per-file": false,
        "max-file-line-count": [true, 500],
        "max-line-length": [true, 160],
        "member-access": true,
        "member-ordering": false,
        "no-angle-bracket-type-assertion": false,
        "no-console": true,
        "no-duplicate-variable": [true, "check-parameters"],
        "no-empty": [true, "allow-empty-catch"],
        "no-empty-interface": false,
        "no-unnecessary-callback-wrapper": true,
        "no-unused-expression": [true, "allow-fast-null-checks", "allow-new", "allow-tagged-template"],
        "no-unused-variable": [true, "check-parameters"],
        "object-literal-shorthand": true,
        "object-literal-sort-keys": [true, "ignore-case", "locale-compare", "match-declaration-order", "shorthand-first"],
        "prefer-object-spread": true,
        "prefer-template": true,
        "quotemark": [true, "single", "jsx-double", "avoid-escape"],
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "unnecessary-else": true,
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"]
    },
    "jsRules": {
        "object-literal-sort-keys": false,
        "quotemark": [true, "single", "jsx-double", "avoid-escape"]
    }
}
